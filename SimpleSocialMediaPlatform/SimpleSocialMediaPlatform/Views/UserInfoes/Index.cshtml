@model IEnumerable<SimpleSocialMediaPlatform.Models.UserInfo>

@{
    ViewData["Title"] = "Index";
}



<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>User ID</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Address 2</th>
                <th>City</th>
                <th>State</th>
                <th>Zip Code</th>
                <th>Image</th>
                <th>Date of Birth</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address2)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.State)</td>
                    <td>@Html.DisplayFor(modelItem => item.ZipCode)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.UserPostImage))
                        {
                            var fileExtension = System.IO.Path.GetExtension(item.UserPostImage).ToLower();

                            if (fileExtension == ".jpg" || fileExtension == ".png" || fileExtension == ".jpeg")
                            {
                                // Displaying the Image
                                <img src="@Url.Content("~/Images/" + item.UserPostImage)" alt="@item.UserPostImage" />
                            }
                            else if (fileExtension == ".pdf")
                            {
                                // Displaying the PDF
                                <iframe src="@Url.Content("~/Images/" + item.UserPostImage)"></iframe>
                            }
                            else
                            {
                                @:No image or PDF available.
                            }
                        }
                        else
                        {
                            @:No image or PDF available.
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.DOB)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreateAt)</td>
                    <td class="action-links">
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="bottom-style">
        <p>Additional content or footer information can go here.</p>
    </div>
</div>

                    <!-- CSS styles -->
<style>
    /* Table styles */
    .table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #ddd;
    }

    /* Table header styles */
    .table th {
        background-color: #f2f2f2;
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    /* Table body styles */
    .table td {
        border: 1px solid #ddd;
        padding: 8px;
    }

    /* Table hover effect */
    .table tr:hover {
        background-color: #f2f2f2;
    }

    /* Image styling */
    .table img {
        height: 80px;
        width: 100px;
        object-fit: cover;
        border-radius: 5px;
    }

    /* PDF styling */
    .table iframe {
        height: 80px;
        width: 100px;
        border: none;
    }

    /* Actions styling */
    .action-links a {
        margin-right: 5px;
        color: #385898;
        text-decoration: none;
    }

    /* Responsive styles */
    media (max-width: 768px) {
        .table td,
        .table th {
            font-size: 14px;
        }
    }

    /* Bottom style */
    .bottom-style {
        margin-top: 20px;
        text-align: center;
        font-size: 14px;
        color: #666;
    }
</style>